<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.florence">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Florence.NoActionBar">
        <activity
            android:name=".activities_administrator.UsersListActivity"
            android:exported="true"
            android:theme="@style/Theme.Florence.Users"/>
        <activity
            android:name=".activities_administrator.ReservationsListActivity"
            android:exported="true" />
        <activity
            android:name=".activities_client.LoginActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Florence.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities_client.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Florence.NoActionBar" >
        </activity>
        <activity
            android:name=".activities_administrator.Admin_HomeActivity"
            android:exported="true"
            android:theme="@style/Theme.Florence.NoActionBar">
        </activity>
    </application>

</manifest>